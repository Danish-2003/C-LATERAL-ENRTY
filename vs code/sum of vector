#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin>>n;
    vector<int>v;
    for(int i=0; i<n; i++){
        v.push_back(i);
    }
    int sum=0;
    for(int i=0; i<n; i++){
       
        sum=sum+v[i];
    }
    cout<<"The Sum is : "<<endl;
    cout<<sum<<endl;

    return 0;
}
